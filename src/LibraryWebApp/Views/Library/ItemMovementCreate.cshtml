@model LibraryWebApp.Models.LibraryViewModels.ItemMovementViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="ItemMovementCreate">
    <div class="form-horizontal">
        <h4>ItemMovement</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ItemMovement.ApplicationUserId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ItemMovement.ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                <span asp-validation-for="ItemMovement.ApplicationUserId" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="ItemMovement.Condition" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ItemMovement.Condition" class="form-control" />
                <span asp-validation-for="ItemMovement.Condition" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ItemMovement.Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ItemMovement.Date, new { type = "date" })
                <span asp-validation-for="ItemMovement.Date" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ItemMovement.Deadline" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ItemMovement.Deadline, new { type = "date" })
                <span asp-validation-for="ItemMovement.Deadline" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ItemMovement.ItemId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ItemMovement.ItemId" class ="form-control" asp-items="ViewBag.ItemId"></select>
                <span asp-validation-for="ItemMovement.ItemId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ItemMovement.MovementType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ItemMovement.MovementType" class="form-control" asp-items="ViewBag.MovType"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="ItemMovementIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
