@model LibraryWebApp.Models.LibraryViewModels.FavouriteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Add to favourites</h2>

<h3>Please add your comment : </h3>
<form asp-controller="Library" asp-action="ItemAddToFavourites"  method="post" class="form-horizontal">
    
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Comment" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Comment" class="form-control" />
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
    </div>
    

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Add to Favourites</button>
                </div>
            </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
