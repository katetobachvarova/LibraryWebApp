@model IEnumerable<LibraryWebApp.Models.LibraryViewModels.ItemMovementViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="ItemMovementCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                User
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemMovement.Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemMovement.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemMovement.Deadline)
            </th>
            <th>
               Librarian
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemMovement.MovementType)
            </th>
            <th>
                Title
            </th>
            <th>
                Item Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemMovement.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemMovement.Condition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemMovement.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemMovement.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemMovement.Librarian.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemMovement.MovementType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemMovement.Item.Title.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemMovement.Item.ItemId)
            </td>
            <td>
                <a asp-action="ItemMovementEdit" asp-route-id="@item.ItemMovement.ItemMovementId">Edit</a> |
                <a asp-action="ItemMovementDetails" asp-route-id="@item.ItemMovement.ItemMovementId">Details</a> |
                <a asp-action="ItemMovementDelete" asp-route-id="@item.ItemMovement.ItemMovementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
