@model LibraryWebApp.Models.LibraryViewModels.ItemMovementViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="ItemMovementEdit">
    <div class="form-horizontal">
        <h4>ItemMovement</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ItemMovement.ItemMovementId" />
        <input type="hidden" asp-for="ItemMovement.RowVersion" />
        <div class="form-group">
            <label asp-for="ItemMovement.Deadline" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ItemMovement.Deadline, new { type = "date" })
                <span asp-validation-for="ItemMovement.Deadline" class="text-danger" ></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="ItemMovementIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
